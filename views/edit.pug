extends layout

block content
  h1 Real Simple Fake Survey
  p Delete and update entries here. To delete, you just need the first and last name. If there is more than one entry that matches, then all of them will be deleted. Update however you need...

  a(href="/simple-survey-v2", name="home") Home
  a(href="/simple-survey-browse", name="edit") Browse entries here

  form(method="POST", action="/simple-survey-delete")
    div.formgroup.person
      label Name
      div.formgroupfields
        input(type="text", name="firstname", placeholder="first", id="first", maxlength="50" required)
        input(type="text", name="lastname", placeholder="last", id="last", maxlength="50" required)

    div.formgroup.submit
      input(type="submit", name="submit", value="Delete")

  form(method="POST", action="/simple-survey-update")
    div.formgroup.person
      label Name
      div.formgroupfields
        input(type="text", name="firstname", placeholder="first", id="first", maxlength="50" required)
        input(type="text", name="lastname", placeholder="last", id="last", maxlength="50" required)

    div.formgroup.contact
      label Contact
      div.formgroupfields
        input(type="email", name="email", placeholder="who@where.what" id="email", maxlength="40")
        input(type="tel", name="phone", pattern="[0-9]{6,20}", placeholder="ex: 123456789, 6-20 digits", id="phone", maxlength="30")

    div.formgroup.idstuff
      label ID Stuff
      div.formgroupfields
        input(type="number", name="idnumber", placeholder="ID number", id="id", min="0", max="1000000") 
        input(type="number", name="age", placeholder="age", id="age", min="0", max="1000000")

    div.formgroup
      label(for="education") Grade level completed?
      div.formgroupfields
        select(id="education", name="education")
          option(value="0") Kindergarten
          option(value="1") 1
          option(value="2") 2
          option(value="3") 3
          option(value="4") 4
          option(value="5") 5
          option(value="6") 6
          option(value="7") 7
          option(value="8") 8
          option(value="9") 9
          option(value="10") 10
          option(value="11") 11
          option(value="12") 12
          option(value="13") Professional Certificates
          option(value="14") Vocational Diploma
          option(value="15") Associates Degree
          option(value="16") Bachelor's Degree
          option(value="17") Master's Degree
          option(value="18") Doctorate Degree

    div.formgroup
      label(for="comments") Tell me about your hobbies
      div.formgroupfields
        textarea(name="comments", placeholder="I eat boogies, I lick bicycle seats...")

    div.formgroup.submit
      input(type="submit", name="submit", value="Update")
